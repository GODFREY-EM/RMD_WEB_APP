@{
    ViewData["Title"] = "Contact Us";
}

<script>
    // Show the dialog if it is present in the ViewBag
    if ('@ViewBag.DialogMessage' != '') {
        alert('@ViewBag.DialogMessage');
    }
</script>

<main>

    <!-- Breadcrumbs -->
    <div class="breadcrumbs">
        <nav>
            <div class="container">
                <ol>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>Contact</li>
                </ol>
            </div>
        </nav>
    </div>
    <!-- End Breadcrumbs -->

    <!-- Contact Section -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">
            <div>
                <iframe style="border: 0; width: 100%; height: 340px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d25711.07326701848!2d38.96944968853765!3d-6.782153449984253!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x185c42819cc1d1c3%3A0x6a8e0b5b13cf3d05!2sKibaha!5e1!3m2!1sen!2stz!4v1700296209123!5m2!1sen!2stz" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
            <!-- End Google Maps -->

            <div class="row gy-4 mt-4">
                <div class="col-lg-4">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <i class="bi bi-geo-alt"></i>
                            <h4 class="card-title">Location</h4>
                            <p class="card-text">Kibaha, Pwani (Coast Region) Tanzania</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <i class="bi bi-envelope"></i>
                            <h4 class="card-title">Email</h4>
                            <p class="card-text">RMD@example.com</p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <i class="bi bi-phone"></i>
                            <h4 class="card-title">Call</h4>
                            <p class="card-text">+255 758 000 000</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Section -->

</main>
