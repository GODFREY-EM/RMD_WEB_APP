@{
    ViewData["Title"] = "Packaging Service Details";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs">
        <nav>
            <div class="container">
                <ol>
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>Packaging Service Details</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Service Details Section ======= -->
    <section id="service-details" class="service-details">
        <div class="container" data-aos="fade-up">
            <div class="row gy-4">
                <div class="col-lg-4">
                    <div class="services-list">
                        <a asp-controller="Home" asp-action="StorageServiceDetails">Storage</a>
                        <a asp-controller="Home" asp-action="LogisticsServiceDetails">Logistics</a>
                        <a asp-controller="Home" asp-action="CargoServiceDetails">Cargo</a>
                        <a asp-controller="Home" asp-action="TruckingServiceDetails">Trucking</a>
                        <a asp-controller="Home" asp-action="PackagingServiceDetails" class="active">Packaging</a>
                        <a asp-controller="Home" asp-action="WarehousingServiceDetails">Warehousing</a>
                    </div>

                    <h4>Expert Packaging Services</h4>
                    <p>Trust RMD Transportation Company for expert packaging services. We ensure your items arrive in perfect condition during transit.</p>
                    <a href="#" class="btn btn-primary">Get a Quote</a>
                </div>

                <div class="col-lg-8">
                    <img src="~/img/packaging-service.jpg" alt="Packaging Service" class="img-fluid services-img">
                    <h3>Why Choose Our Packaging Service?</h3>
                    <p>
                        RMD Transportation Company's packaging service is designed to protect your goods during transit. Here's why you should choose us:
                    </p>
                    <ul>
                        <li><i class="bi bi-check-circle"></i> <span>Expert Care: We take care to protect your goods during packaging.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Perfect Condition: We ensure your items arrive in perfect condition at their destination.</span></li>
                        <li><i class="bi bi-check-circle"></i> <span>Quality Packaging: Count on us for professional and quality packaging.</span></li>
                    </ul>
                    <p>
                        RMD Transportation Company is your trusted partner for ensuring your goods are protected and arrive in the best possible condition during transit.
                    </p>
                </div>
            </div>
        </div>
    </section><!-- End Service Details Section -->
</main><!-- End #main -->
